<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Image -->
            <ImageView
                android:id="@+id/img_cv_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher_background"/>
            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Name:" />
            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />

            <!-- Role -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Role:" />
            <TextView
                android:id="@+id/text_view_role"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />

            <!-- Phone Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Phone Number:" />
            <TextView
                android:id="@+id/text_view_phone"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Email:" />
            <TextView
                android:id="@+id/text_view_email"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />

            <!-- Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Address:" />
            <TextView
                android:id="@+id/text_view_address"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />

            <!-- Gender -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Gender:" />
            <TextView
                android:id="@+id/text_view_gender"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />

            <!-- Date of Birth -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Date of Birth:" />
            <TextView
                android:id="@+id/text_view_dob"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />

            <!-- Education -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Education:" />
            <TextView
                android:id="@+id/text_view_education"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />

            <!-- Job Experiment -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Job Experiment:" />
            <TextView
                android:id="@+id/text_view_job_exp"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />

            <!-- Degree -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Degree:" />
            <TextView
                android:id="@+id/text_view_degree"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />

            <!-- Skills -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Skills:" />
            <TextView
                android:id="@+id/text_view_skills"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />

            <!-- Career Goals -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Career Goals:" />
            <TextView
                android:id="@+id/text_view_career_goals"
                android:layout_width="match_parent"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_height="30dp" />

            <!-- Social Activities -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Social Activities:" />
            <TextView
                android:id="@+id/text_view_social_activities"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />

            <!-- Hobbies -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Hobbies:" />
            <TextView
                android:id="@+id/text_view_hobbies"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />

            <!-- Achievement -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Achievement:" />
            <TextView
                android:id="@+id/text_view_achievement"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />

            <!-- More Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="More Info:" />
            <TextView
                android:id="@+id/text_view_more_info"
                android:layout_width="match_parent"
                android:editable="false"
                android:layout_height="30dp" />


        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_edit_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:tint="@android:color/white"
        android:elevation="6dp" />
</RelativeLayout>