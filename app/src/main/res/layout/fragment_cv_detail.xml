<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Image -->
            <ImageView
                android:id="@+id/img_cv_photo"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher_background"/>
            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Họ và Tên:" />
            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Role -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Vị trí ứng tuyển:" />
            <TextView
                android:id="@+id/text_view_role"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Phone Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Số điện thoại:" />
            <TextView
                android:id="@+id/text_view_phone"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Email:" />
            <TextView
                android:id="@+id/text_view_email"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Địa chỉ:" />
            <TextView
                android:id="@+id/text_view_address"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Gender -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Giới tính:" />
            <TextView
                android:id="@+id/text_view_gender"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Date of Birth -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Ngày sinh:" />
            <TextView
                android:id="@+id/text_view_dob"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Education -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Trình độ học vấn:" />
            <TextView
                android:id="@+id/text_view_education"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Job Experiment -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Kinh nghiệm làm việc" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvExp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    />
            </RelativeLayout>

            <!-- Degree -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Chứng chỉ:" />
            <TextView
                android:id="@+id/text_view_degree"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Skills -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Các kỹ năng:" />
            <TextView
                android:id="@+id/text_view_skills"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Career Goals -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Mục tiêu nghề nghiệp:" />
            <TextView
                android:id="@+id/text_view_career_goals"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_height="30dp" />

            <!-- Social Activities -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Hoạt động xã hội:" />
            <TextView
                android:id="@+id/text_view_social_activities"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Hobbies -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Sở thích:" />
            <TextView
                android:id="@+id/text_view_hobbies"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Achievement -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Danh hiệu và giải thưởng:" />
            <TextView
                android:id="@+id/text_view_achievement"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- More Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Thông tin thêm:" />
            <TextView
                android:id="@+id/text_view_more_info"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_edit_cv"
        android:src="@drawable/icon_alt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
         />
</RelativeLayout>